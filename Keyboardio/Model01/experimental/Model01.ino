void setup() {
  Kaleidoscope.setup();

  NumPad.numPadLayer = NUMPAD;

  LEDRainbowEffect.brightness(150);
  LEDRainbowWaveEffect.brightness(150);

  LEDOff.activate();

  EEPROMKeymap.setup(5);
  ColormapEffect.max_layers(3 + 5);
  SpaceCadet.disable();
  ActiveModColorEffect.highlightNormalModifiers(false);
}

void loop() {
  Kaleidoscope.loop();
